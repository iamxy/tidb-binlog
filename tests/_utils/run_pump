#!/bin/sh

set -ue

OUT_DIR=/tmp/tidb_binlog_test
PORT=$1

# kill pump, util no pump process is running
while :
do
        pump_num=`ps aux > temp && grep "pump -log-file $OUT_DIR/pump_$1.log" temp | wc -l && rm temp`
        if [ $pump_num -ne 0 ]; then
                killall pump || true
                sleep 1
        else
                break
        fi
done

echo "[$(date)] <<<<<< RUNNING pump  >>>>>>" >> "$OUT_DIR/pump_$1.log"

pump -log-file $OUT_DIR/pump_$PORT.log --addr=0.0.0.0:$PORT \
	--advertise-addr=localhost:$PORT \
	--pd-urls=http://localhost:2379 \
	--data-dir=$OUT_DIR/pump_$PORT \
	--node-id=pump:$PORT >> $OUT_DIR/pump_$PORT.log 2>&1
